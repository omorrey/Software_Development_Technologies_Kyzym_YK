<Window x:Class="personalAccounting.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вхід" Height="350" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="Авторизація" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Text="Логін:"/>
        <TextBox x:Name="UsernameBox" Margin="0,0,0,10" Height="25"/>

        <TextBlock Text="Пароль:"/>
        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20" Height="25"/>

        <Button Content="Увійти" Click="Login_Click" Height="35" Background="#DDFFDD" Margin="0,0,0,10" FontWeight="Bold"/>

        <TextBlock Text="Немає акаунту?" HorizontalAlignment="Center" Foreground="Gray"/>
        <Button Content="Зареєструватися" Click="OpenRegister_Click" Height="30" Background="Transparent" BorderThickness="0" Foreground="Blue" Cursor="Hand"/>
    </StackPanel>
</Window>