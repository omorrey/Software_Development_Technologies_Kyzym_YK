<Window x:Class="personalAccounting.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Реєстрація" Height="400" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="Новий користувач" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Text="Логін:"/>
        <TextBox x:Name="RegUsernameBox" Margin="0,0,0,10" Height="25"/>

        <TextBlock Text="Email:"/>
        <TextBox x:Name="RegEmailBox" Margin="0,0,0,10" Height="25"/>

        <TextBlock Text="Пароль:"/>
        <PasswordBox x:Name="RegPasswordBox" Margin="0,0,0,20" Height="25"/>

        <Button Content="Створити акаунт" Click="Register_Click" Height="35" Background="#EEEEEE" Margin="0,0,0,10" FontWeight="Bold"/>

        <Button Content="Назад до входу" Click="BackToLogin_Click" Height="30" Background="Transparent" BorderThickness="0" Foreground="Gray"/>
    </StackPanel>
</Window>