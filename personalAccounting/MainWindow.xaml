<Window x:Class="personalAccounting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Головна" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="456">

            <TextBlock Text="Ваші Фінанси" 
               FontSize="28" 
               FontWeight="SemiBold" 
               HorizontalAlignment="Center" 
               Margin="0,0,0,30" 
               Foreground="#333333"/>
            <Border Background="#F0F0F0" 
            BorderBrush="#CCCCCC" 
            BorderThickness="1" 
            CornerRadius="8" 
            Padding="20" 
            Width="452">

                <StackPanel>
                    <TextBlock Text="ЗАГАЛЬНИЙ КАПІТАЛ" 
                       FontSize="14" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Foreground="#666666" 
                       Margin="0,0,0,10"/>

                    <TextBlock x:Name="TotalCapitalText" 
                       Text="0.00 UAH" 
                       FontSize="40" 
                       FontWeight="ExtraBold" 
                       HorizontalAlignment="Center" 
                       Foreground="#007BFF"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="#28A745" 
            BorderThickness="1" 
            CornerRadius="5" 
            Padding="10" 
            Margin="0,0,0,35">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Фонд на ремонт: " 
                       FontSize="16" 
                       Foreground="#28A745" 
                       FontWeight="SemiBold"/>
                    <TextBlock x:Name="FundBalanceText" 
                       Text="0.00 UAH" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Foreground="#28A745"/>
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Center" 
                Margin="0,0,0,15">

                <Button Content="+ Витрата" 
                Click="AddExpense_Click" 
                Width="140" Height="40" 
                Margin="0,0,10,0" 
                FontSize="16" 
                Background="#FFDDDD" 
                BorderBrush="#FFBBBB"/>

                <Button Content="+ Дохід" 
                Click="AddIncome_Click" 
                Width="140" Height="40" 
                FontSize="16" 
                Background="#DDFFDD" 
                BorderBrush="#BBFFBB"/>
            </StackPanel>
            
            <Button Content="Поповнити Фонд" 
            Click="TopUpFund_Click" 
            Width="290" 
            Height="40" 
            FontSize="16" 
            Background="#E0FFFF" 
            BorderBrush="#ADD8E6" 
            Margin="0,15,0,10"/>

            <Button Content="📊 Статистика" 
            Click="Statistics_Click" 
            Width="290" 
            Height="40" 
            FontSize="16" 
            Background="#E0E0E0" 
            BorderBrush="#CCCCCC" 
            Margin="0,0,0,0"/>

            <Button Content="🏦 Банківський Калькулятор" 
            Click="OpenBankCalc_Click" 
            Width="290" 
            Height="40"
            Margin="0,10,0,0" 
            Background="#FFD700"/>

        </StackPanel>
    </Grid>
</Window>