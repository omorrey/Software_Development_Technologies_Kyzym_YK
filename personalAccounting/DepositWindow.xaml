<Window x:Class="personalAccounting.DepositWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Банківський Калькулятор" Height="400" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Калькулятор Депозиту" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Сума вкладу (UAH):" />
            <TextBox x:Name="AmountBox" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Річна ставка (%):" />
            <TextBox x:Name="RateBox" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Термін (місяців):" />
            <TextBox x:Name="MonthsBox" Height="30" Margin="0,0,0,20"/>

            <Button Content="Розрахувати через Банк" Click="Calculate_Click" Height="40" Background="#007BFF" Foreground="White" FontSize="14" Margin="0,0,0,20"/>

            <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Background="#F9F9F9">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Результат: " FontWeight="Bold"/>
                    <TextBlock x:Name="ResultText" Text="-" FontWeight="Bold" Foreground="Green"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>