<Window x:Class="personalAccounting.AddExpenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Додати витрату" Height="410" Width="400" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Нова витрата" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Сума:"/>
            <TextBox x:Name="AmountBox" Margin="0,5,0,10" Padding="5"/>

            <TextBlock Text="Категорія:"/>
            <ComboBox x:Name="CategoryBox" Margin="0,5,0,10" Padding="5">
                <ComboBoxItem Content="Продукти" IsSelected="True"/>
                <ComboBoxItem Content="Транспорт"/>
                <ComboBoxItem Content="Розваги"/>
                <ComboBoxItem Content="Комуналка"/>
                <ComboBoxItem Content="Інше"/>
            </ComboBox>

            <TextBlock Text="Опис (необов'язково):"/>
            <TextBox x:Name="DescriptionBox" Margin="0,5,0,20" Padding="5" Height="50" TextWrapping="Wrap"/>

            <Button Content="Зберегти" Click="SaveBtn_Click" Height="30" Margin="0,0,0,10" Background="#DDDDDD"/>
            <Button Content="Скасувати" Click="CancelBtn_Click" Height="30"/>
        </StackPanel>
    </Grid>
</Window>