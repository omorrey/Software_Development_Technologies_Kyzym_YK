<Window x:Class="personalAccounting.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Статистика та управління" Height="450" Width="600"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Історія фінансів" 
                   FontSize="22" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Показати:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="FilterBox" Width="150" SelectionChanged="FilterBox_SelectionChanged" SelectedIndex="0">
                <ComboBoxItem Content="Всі транзакції"/>
                <ComboBoxItem Content="Тільки Витрати"/>
                <ComboBoxItem Content="Тільки Доходи"/>
            </ComboBox>
        </StackPanel>

        <DataGrid Grid.Row="2" x:Name="StatsGrid" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" IsReadOnly="True"
                  Margin="0,0,0,10" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding TransactionId}" Width="40" />
                <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat=dd.MM.yyyy}" Width="90" />
                <DataGridTextColumn Header="Тип" Binding="{Binding Type}" Width="70" />
                <DataGridTextColumn Header="Категорія" Binding="{Binding Category}" Width="100" />
                <DataGridTextColumn Header="Сума (UAH)" Binding="{Binding Amount}" Width="90" />
                <DataGridTextColumn Header="Опис" Binding="{Binding Description}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Grid.Row="3" x:Name="TotalText" 
                   Text="Разом: 0.00 UAH" 
                   FontSize="16" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,0,10,15"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
            <Button Content="Дублювати" Click="DuplicateBtn_Click" Width="100" Height="30" Margin="0,0,10,0" Background="#FFD1E8FF"/>
            <Button Content="Експорт Excel" Name="ExportCsvBtn" Click="ExportCsvBtn_Click" Width="100" Height="30" Margin="0,0,10,0"/>
            <Button Content="Експорт Txt" Name="ExportTxtBtn" Click="ExportTxtBtn_Click" Width="100" Height="30"/>
        </StackPanel>

        <Button Grid.Row="5" Content="Закрити" Click="CloseBtn_Click" Height="30" Width="100" HorizontalAlignment="Center"/>
    </Grid>
</Window>